<%- include ('../partials/header') %>
<div class="container">
<header class="jumbotron">
	<div class="container">
	<h1> Welcome to MediAssist...</h1>
	<p>
		View your nearest hospital and its availing facilities.
	</p>
	<a  class = "btn btn-primary btn-lg" href="hospital/new">Add new Hospital</a>
</div>
</header>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
<% for(var i=0;i<hospital.length;i++){ %>
	<div class="col-md-3 col-sm-6">
<div class="thumbnail">
	<img src="<%= hospital[i].image %>">
	<div class="caption">
		<h4>
			<%=hospital[i].name %>
		</h4>
	</div>
	<p>
		<a href="/hospital/<%= hospital[i]._id %>" class="btn btn-primary">More Info</a>
	</p>

	
</div>
	</div>
<% } %>
</div>
</div>
<%- include ('../partials/footer') %>
